<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomePageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/fragment_homepage_label_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Recentes"
                android:textSize="25sp"
                android:textColor="@color/home_yellowish_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_homepage_recycler_view_recent_cards"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_homepage_recycler_view_recent_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/fragment_homepage_label_recent"
                app:layout_constraintBottom_toTopOf="@id/fragment_homepage_recycler_view_categories"
                tools:layout="@layout/fragment_recycler_view"
                />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_homepage_recycler_view_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/fragment_homepage_recycler_view_recent_cards"
                tools:layout="@layout/fragment_recycler_view"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
